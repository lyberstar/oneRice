<!--pages/signTable/signTable.wxml-->
<view class="body_contain">
	<view class="sign_table">
		<form bindsubmit="formSubmit">
			<view class="sign_box">
				<view class="input_box">
					<text>队长姓名(家长)</text>
					<input type="text" name="name" placeholder="请输入姓名" placeholder-class="place" />
				</view>
			</view>
			<view class="sign_box">
				<view class="input_box">
					<text>队员姓名1(儿童)</text>
					<input type="text" name="name" placeholder="请输入姓名" placeholder-class="place" />
				</view>
				<view class="input_box">
					<text>队员姓名2(儿童)</text>
					<input type="text" name="name" placeholder="请输入姓名" placeholder-class="place" />
				</view>
			</view>
			<view class="sign_box">
				<view class="input_box">
					<text>所在地区</text>
					<picker class="picker" mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
						<text>{{multiArray[0][multiIndex[0]]}}-{{multiArray[1][multiIndex[1]]}}</text>
					</picker>
				</view>
				<view class="input_box">
					<text>落地机构</text>
					<picker class="picker" bindchange="bindPickerChange" name="sex" value="{{index}}" range="{{array}}">
	        			<text>{{array[index]}}</text>
	   		 		</picker>
				</view>
			</view>
			<view class="tip_box">
				<checkbox checked="{{isChecked}}" />您已同意
				<p class="turn_tip" bindtap="turnTip">《免责声明》</p>
			</view>
			<view class="btn_contain">
				<button formType="submit" class="submit">提交</button>
			</view>
		</form>
	</view>
</view>
