/* pages/poster/poster.wxss */

.maskButton {
  color: #4B4B4B;
  font-size: 34rpx;
  line-height: 130rpx;
  width: 100%; 
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: rgba(255, 255, 255, 0);
  border-radius: 0;
  border: none;
}

.maskButton::after {
  border: none
}

.maskButton-hover {
  background-color: #0c8f49; 
}

@keyframes showMask {
  0% {
    opacity: 0; 
  }   
  100% {
    opacity: 1; 
  }
}

@keyframes dismissMask {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}