/* pages/taskList/taskList.wxss */
.body_contain {
  width: 100%;
  padding: 0 40rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 150rpx;
}

.body_contain .station {
  width: 630rpx;
  height: 150rpx;
  box-shadow: 0 10rpx 20rpx 0 rgba(223, 228, 233, 0.5);
  border: solid 1rpx #efefef;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.list_box{
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
}

.list_box .done_img{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: -6rpx;
  left: -6rpx;
}

.list_box .done_content,.list_box .doing_content{
  color: #4a4a4a;
  font-size: 40rpx;
  font-weight: 600;
  margin-left: 90rpx;
}

.list_box .fur_content{
  color: #d9d9d9;
  font-size: 40rpx;
  font-weight: 600;
  margin-left: 90rpx;
}

.btn_contain{
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  z-index: 10;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.submit{
  width: 650rpx;
    height: 80rpx;
    border-radius: 6rpx;
    font-size: 34rpx;
    line-height: 0.94;
    color: #ffffff;
    background-color: #28b1cd;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 11;
}