/* pages/questionnaire/questionnaire.wxss */
.container{
  padding:  40rpx 40rpx 40rpx 40rpx;
}
.container .question{
  margin-bottom: 40rpx;
  font-size: 40rpx;
  font-weight: 500;
  line-height: 56rpx;
}
.container .question .radio{
  font-size: 28rpx;
  color: #1D1E21;
  font-weight:400;
  line-height:40rpx;
  display: block;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #cacaca;
}
.container .question .inner_box{
  width: 36rpx;
  height: 36rpx;
  margin-right: 30rpx;
}
.container .question .radio-group{
  margin-top: 40rpx;
}
.container .question .check-box .checkbox-group{
  margin-top: 20rpx;
}
.container .question .check-box .checkbox{
  display: block;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #cacaca;
  font-size:28rpx;
  font-weight:400;
  line-height:40rpx;
}
.container .textarea textarea{
  margin-top: 40rpx;
  width: 650rpx;
  font-size:28rpx;
  font-weight:400;
  /* line-height:60rpx; */
  background-color: rgba(238,238,238,1);
  border-radius: 16rpx;
  padding: 20rpx 10rpx 20rpx;
}

.container .textarea .placeholder{
  font-size:28rpx;
  font-weight:400;
  color:rgba(151,151,151,1);
  /* line-height:60rpx; */
  padding: 20rpx 10rpx 20rpx;
}
.container .slider .slider_title{
  margin-top: 40rpx;
  margin-bottom: 14rpx;
  display: flex;
  flex-wrap:nowrap;
  justify-content:space-between;
  font-size: 28rpx;
  color: #1D1E21;
  font-weight:400;
}

.btn_contain{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  z-index: 10;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.submit{
  width: 650rpx;
    height: 80rpx;
    border-radius: 6rpx;
    font-size: 34rpx;
    line-height: 0.94;
    color: #ffffff;
    background-color: #28b1cd;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 11;
}

form{
  padding-bottom: 150rpx;
}