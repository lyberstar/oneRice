/* pages/firstSign/firstSign.wxss */
@import '../../template/taskIntro/taskIntro.wxss'

page{
	width: 100%;
}

.body_contain{
	width: 100%;
	display: flex;
	flex-direction: column;
}

.uploadImage{
	width: 100%;
	margin-top: 200rpx;
	display: flex;
	align-items: center;
	justify-content: space-around;
	padding: 0 100rpx;
	box-sizing: border-box;
}

.uploadImage .img_box{
	width: 260rpx;
	height: 260rpx;
	margin: 70rpx 0;
	border-radius: 6rpx;
	border: solid 1rpx #d2d2d2;
	display: flex;
	align-items: center;
	justify-content: center;
}

.uploadImage .img_box image{
	width: 60rpx;
	height: 60rpx;
}

.uploadImage .preview_box{
	width: 400rpx;
	height: 400rpx;
	border-radius: 6rpx;
	border: solid 1rpx #d2d2d2;
	display: flex;
	align-items: center;
	justify-content: center;
	position: relative;
}

.uploadImage .preview_box .preview{
	width: 400rpx;
  height: 400rpx;
}

.uploadImage .preview_box .delete{
	width: 40rpx;
	height: 40rpx;
	position: absolute;
	top: -20rpx;
	right: -20rpx;
	z-index: 10;
}

.main-content{
  margin-top: 50rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.main-content p{
  font-size: 34rpx;
  margin-bottom: 10rpx;
}

.btn_contain{
	width: 100%;
	position: fixed;
	bottom: 0;
	display: flex;
	align-items: center;
	justify-content: space-around;
	padding: 20rpx 0;
	z-index: 10;
  	background-color: #fff;
}

.submit{
	width: 300rpx;
  	height: 80rpx;
  	border-radius: 6rpx;
  	font-size: 34rpx;
  	line-height: 0.94;
  	color: #ffffff;
  	background-color: #28b1cd;
  	display: flex;
  	align-items: center;
  	justify-content: center;
  	z-index: 11;
}
.info_contain{
	display: flex;
	flex-direction: column;
	padding: 0 40rpx;
	margin-bottom: 150rpx;
}

.info_contain .info_image{
	width: 100%;
}

.info_contain .info_text{
	font-size: 30rpx;
	line-height: 50rpx;
}