page{
	width: 100%;
	height: 100vh;
	overflow: hidden;
}

.body_contain{
  padding: 20rpx 0;
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.btm-box{
	width: 680rpx;
	height: 19%;
	position: relative;
}

.sing_btn,.start_btn{
	width: 680rpx;
	height: 100%;
	font-size: 55rpx;
	display: flex;
	color: #fff;
	align-items: center;
	justify-content: center;
	background-size: cover;
	font-weight: 500;
	letter-spacing: 30rpx;
}

.back-hover{
	position: absolute;
	top: 0;
	left: 0;
	background-color: #eee;
	opacity: 0.7;
	z-index: 10;
	width: 680rpx;
	height: 100%;
	border-radius: 10rpx;
}

.btm-top{
	margin-top: 20rpx;
}

