.rank-item {
  background-color: #fff;
  border-bottom: 2rpx solid #ddd;
}
.rank {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
}
.left-rank{
  width: 60%;
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}
.right-rank {
  padding-right: 30rpx;
  text-align: center;
}
image {
  display: block;
}
.rank-img {
  width: 40rpx;
  height: 40rpx;
  margin: 0 30rpx;
}
.rank-num {
  width: 100rpx;
  text-align: center;
  font-size:24rpx;
  font-family:Arial;
  font-weight:900;
  color:rgba(252,204,117,1);
  line-height:34rpx;
}

.name-area{
  width: 80%;
  margin-left: 30rpx;
}
.avatar {
  width: 90rpx;
  height: 90rpx;
  margin: 0 30rpx;
  border-radius: 150rpx;
}
.name {
  font-size: 32rpx;
  font-weight: 400;
  color: #333;
}
.area {
  font-size: 24rpx;
  color: #999;
}
.steps {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(158,158,158,1);
  line-height: 40rpx;
}
.star {
  padding: 0 20rpx 0 40rpx;
  text-align: center;
}
.star-num {
  color: #666;
  font-size: 24rpx;
}
.star-img {
  width: 40rpx;
  height: 40rpx;
}
.rank-border-bottom {
  height: 2rpx;
  background-color: #E5E5E5;
  margin: 0 20rpx;
}